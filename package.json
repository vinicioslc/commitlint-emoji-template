{
  "name": "commitlint-emoji",
  "version": "1.0.29",
  "description": "A tool to help peoples avoid adverse reactions from drugs.",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "ri": "npm run release",
    "rici": "release-it --ci",
    "release": "release-it",
    "cm": "cz",
    "cma": "git add . && npm run cm",
    "changelog": "npx conventional-changelog-cli -p cz-emoji-config -i CHANGELOG.md -s -r 0",
    "r:p": "release-it patch",
    "r:mi": "release-it minor",
    "r:ma": "release-it major"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/bumper": "^4.0.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-cz-emoji-config": "^1.0.1",
    "cross-env": "^7.0.3",
    "cz-emoji": "^1.3.1",
    "husky": "^8.0.3",
    "release-it": "^15.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "changelog": {
    "emojis": true,
    "authorName": true,
    "authorEmail": false
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
